---
// Imports
const { frontmatter } = Astro.props

//Layout Components
import Layout from './Layout.astro'

// Section Components
import PortfolioPostHero from '../components/blocks/portfolio/PortfolioPostHero.astro'

// Content
// - SEO
const SEO = {
	title: `${frontmatter.title} | Agency`,
	description: `${frontmatter.description}`
}
---

<Layout title={SEO.title} description={SEO.description}>
	<PortfolioPostHero
		title={frontmatter.title}
		description={frontmatter.description}
		overheadText={frontmatter.subtitle}
		previewLink={frontmatter.previewLink}
		buyLink={frontmatter.buyLink}
		image={frontmatter.image}
	/>

	<div class="post-body basic-text basic-text--lg">
		<slot />
	</div>
</Layout>

<style>
	.post-body {
		@apply mx-auto max-w-3xl px-6 py-12 lg:py-24;
	}
</style>
